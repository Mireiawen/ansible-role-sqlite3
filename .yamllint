---
## /* vim: set ft=yaml tabstop=2 softtabstop=2 shiftwidth=2 expandtab smarttab autoindent: */
extends: "default"

rules:
  braces:
    min-spaces-inside: 1
    max-spaces-inside: 1
    min-spaces-inside-empty: 0
    max-spaces-inside-empty: 0
    level: "error"
  brackets:
    min-spaces-inside: 1
    max-spaces-inside: 1
    min-spaces-inside-empty: 0
    max-spaces-inside-empty: 0
    level: "error"
  colons:
    max-spaces-before: 0
    max-spaces-after: 1
    level: "error"
  commas:
    max-spaces-before: 0
    max-spaces-after: 1
    level: "error"
  comments:
    require-starting-space: true
    level: "error"
  comments-indentation:
    level: "error"
  document-start:
    present: true
    level: "error"
  document-end:
    present: false
    level: "error"
  empty-lines:
    max-start: 1
    max-end: 0
    max: 3
    level: "error"
  empty-values:
    forbid-in-block-mappings: true
    forbid-in-flow-mappings: true
    level: "error"
  hyphens:
    max-spaces-after: 1
    level: "error"
  indentation:
    spaces: 2
    indent-sequences: false
    check-multi-line-strings: true
    level: "error"
  key-duplicates:
    level: "error"
  key-ordering: "disable"
  line-length: "disable"
  new-line-at-end-of-file:
    level: "error"
  new-lines:
    type: "unix"
  quoted-strings:
    quote-type: "any"
    required: true
  trailing-spaces:
    level: "error"
  truthy:
    level: "error"
